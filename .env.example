# Archivo de ejemplo para configuración del entorno
# Para desarrollo: cp .env.example .env (los valores por defecto funcionan)
# Para producción: edita .env con credenciales seguras
# NUNCA subas el archivo .env al repositorio

# =================================================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# =================================================================
# Estos valores coinciden con docker-compose por defecto
POSTGRES_USER=reservas_user
POSTGRES_PASSWORD=reservas_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=reservas

# =================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =================================================================
DEBUG=True

# Versión de archivos estáticos (cache busting)
# Se genera automáticamente durante el setup
STATIC_VERSION=1

# =================================================================
# CONFIGURACIÓN DE SEGURIDAD (JWT Y ENCRIPTACIÓN)
# =================================================================
# Para desarrollo puedes usar estos valores de ejemplo
# Para producción: genera claves seguras en https://www.allkeysgenerator.com/
SECRET_KEY=dev-secret-key-change-in-production-please
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production-please

# Configuración de autenticación JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_TIME=30  # Tiempo en minutos antes de expirar el token

# =================================================================
# VARIABLES OPCIONALES PARA EJEMPLOS EN SWAGGER/OPENAPI
# =================================================================
# Estas variables solo afectan los EJEMPLOS mostrados en la documentación
# de la API (http://localhost:8000/docs). NO crean usuarios ni afectan
# la lógica de autenticación.
# 
# Si no se configuran, se usarán valores por defecto:
# EXAMPLE_EMAIL=juan@ejemplo.com
# EXAMPLE_USER_EMAIL=usuario@ejemplo.com
# EXAMPLE_NOMBRE=Juan Pérez
# EXAMPLE_PASSWORD=micontraseña123

# =================================================================
# CONFIGURACIÓN DE PGADMIN (OPCIONAL)
# =================================================================
# Si no se configuran, se usarán valores por defecto para desarrollo
PGADMIN_DEFAULT_EMAIL=admin@tuorganizacion.com
PGADMIN_DEFAULT_PASSWORD=tu_password_pgadmin_seguro

# =================================================================
# INSTRUCCIONES DE USO
# =================================================================
# 1. Copia este archivo: cp .env.example .env
# 2. Edita .env con tus valores reales (especialmente SECRET_KEY y JWT_SECRET_KEY en producción)
# 3. Nunca subas .env al git (ya está en .gitignore)